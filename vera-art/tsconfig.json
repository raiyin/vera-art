{
    "compilerOptions": {
        "allowJs": true,
        "composite": true,
        "resolveJsonModule": true,
        "types": [
            "node"
        ],
        "moduleResolution": "bundler",
        "lib": [
            "es5",
            "es6",
            "dom",
            "dom.iterable"
        ]
    },
    "include": [
        "*.ts",
        "*.json",
        "src/**/*.json",
        ".d.ts"
    ],
    "files": [],
    "module": "ESNext",
    "target": "esnext",
    "references": [
        {
            "path": "./tsconfig.config.json"
        },
        {
            "path": "./tsconfig.app.json"
        },
        {
            "path": "./tsconfig.vitest.json"
        }
    ]
}
